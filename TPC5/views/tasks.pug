extends layout 

block content 
  .w3-card-4
    a.w3-button.w3-block.w3-teal.w3-margin-bottom.w3-center.w3-padding.w3-bottombar.w3-border-dark-gray(href='/tasks/addTask')
      h2 Add Task
    table.w3-padding.w3-table.w3-center
      tr.w3.bottom-bar.w3-border-dark-gray
        th.w3-center.w3-container(style="width:50%")
          b To Do
        th.w3-center.w3-container(style="width:50%")
          b Done
      tr
        td
          table.w3-table-all
            tr
              th #[b Description]
              th #[b Assigned To]
              th #[b Due Date]
              th #[b Actions]
            
            each task in tasks
              if task.status == "false"
                tr
                  td #{task.description}
                  td #{task.assigned_to}
                  td #{task.due_date}
                  td
                    a.glyphicon.glyphicon-pencil.w3-margin-right.w3-large(href="/tasks/editTask/"+task.id style="text-decoration: none")
                    a.glyphicon.glyphicon-ok.w3-margin-right.w3-large(href="/tasks/completeTask/"+task.id style="text-decoration: none") 
                    a.glyphicon.glyphicon-trash.w3-large(href="/tasks/deleteTask/"+task.id style="text-decoration: none")
        
        td
          table.w3-table-all
            tr
              th #[b Description]
              th #[b Assigned To]
              th #[b Due Date]
              th #[b Actions]
            
            each task in tasks
              if task.status == "true"
                tr
                  td #{task.description}
                  td #{task.assigned_to}
                  td #{task.due_date}
                  td
                    a.glyphicon.glyphicon-trash.w3-large(href="/tasks/deleteTask/"+task.id style="text-decoration: none")

    footer.w3-container.w3-teal.w3-center.w3-padding.w3-topbar.w3-border-dark-gray
