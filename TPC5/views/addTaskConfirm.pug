extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Task Added Successfully!
    header.w3-container.w3-teal
      h1 Task #{t.description} (#{t.id})

    form.w3-container(method="POST" action="/tasks/editTask")
      input.w3-input.w3-round(type="hidden" name="id" value=t.id readonly)

      br
      label Description
      input.w3-input.w3-round(type="text" name="description" value=t.description readonly)

      br
      label Assigned To
      input.w3-input.w3-round(type="text" name="assigned_to" value=t.assigned_to readonly)

      br
      label Due Date
      input.w3-input.w3-round(type="text" name="due_date" value=t.due_date readonly)
      input.w3-input.w3-round(type="hidden" name="status" value=t.status readonly)

      br  
      br

    footer.w3-container.w3-teal.w3-center.w3-padding.w3-topbar.w3-border-dark-gray
      h5 Generated by Gon√ßalo Melo #{d} - [#[a(href="/tasks") Return]]