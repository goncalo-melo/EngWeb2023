extends layout 

block content
  .w3-card-4 
    header.w3-container.w3-teal.w3-padding.w3-bottombar.w3-border-dark-gray
      h2 Task Form
    form.w3-container(method="POST" action="/tasks/addTask")
      br
      input.w3-input.w3-border.w3-light-grey(type="hidden" name="id")

      label.w3-text-teal Description
      input.w3-input.w3-border.w3-light-grey(type="text" name="description")

      br
      label.w3-text-teal Assigned To
      input.w3-input.w3-border.w3-light-grey(type="text" name="assigned_to")

      br
      label.w3-text-teal Due Date
      input.w3-input.w3-border.w3-light-grey(type="text" name="due_date")

      input.w3-input.w3-border.w3-light-grey(type="hidden" name="status" value="false")

      br
      center 
      button.w3-btn.w3-teal.w3-round-large.w3-border(type="submit") Add   

      br
      br

    footer.w3-container.w3-teal.w3-center.w3-padding.w3-topbar.w3-border-dark-gray
