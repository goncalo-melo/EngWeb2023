extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal.w3-padding.w3-bottombar.w3-border-dark-gray
      h1 Task: #{t.description} (#{t.id})
    .w3-container
      ul.w3-ul.w3-card-4(style="width:50%")
        li #[b Description: ] #{t.description}
        li #[b Assigned To: ] #{t.assigned_to}
        li #[b Due Date: ] #{t.due_date}
        li #[b Status: ] #{t.status}
        li #[b Task ID: ] #{t.id}
    .w3-container.w3-margin-8
        
    footer.w3-container.w3-teal.w3-center.w3-padding.w3-topbar.w3-border-dark-gray
      h5 Generated by Gon√ßalo Melo #{d} - [#[a(href="/tasks") Return]]

