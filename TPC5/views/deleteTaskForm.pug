extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Task Delete: #{t.description} (#{t.id})
    .w3-container
      ul.w3-ul.w3-card-4(style="width:50%")
        li #[b ID: ] #{t.id}
        li #[b Description: ] #{t.description}
        li #[b Assigned To: ] #{t.assigned_to}
        li #[b Due Date: ] #{t.due_date}
        li #[b Status: ] #{t.status}

      button.w3-btn.w3-round.w3-margin.w3-green
        a(href="/tasks/deleteTask/"+t.id+"/confirm") Confirm
      button.w3-btn.w3-round.w3-margin.w3-red
        a(href="/tasks") Cancel 

    footer.w3-container.w3-teal
    address Generated by RPCW2023 in #{d} - #[a(href="/tasks") Return]
        
