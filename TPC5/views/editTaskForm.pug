extends layout 

block content
  .w3-card-4 
    header.w3-container.w3-teal.w3-padding.w3-bottombar.w3-border-dark-gray
      h2 Task Edit Form

    form.w3-container(method="POST" action="/tasks/editTask")
      input.w3-input.w3-round(type="hidden" name="id" value=t.id readonly)

      br
      label Description
      input.w3-input.w3-round(type="text" name="description" value=t.description)

      br
      label Assigned To
      input.w3-input.w3-round(type="text" name="assigned_to" value=t.assigned_to)

      br
      label Due Date
      input.w3-input.w3-round(type="text" name="due_date" value=t.due_date)
      input.w3-input.w3-round(type="hidden" name="status" value=t.status readonly)

      br
      button.w3-btn.w3-round.w3-teal.w3-mb-2(type="submit") Edit

      br  
      br
    
    footer.w3-container.w3-teal.w3-center.w3-padding.w3-topbar.w3-border-dark-gray
