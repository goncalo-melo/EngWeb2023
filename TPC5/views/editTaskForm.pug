extends layout 

block content
    .w3-card-4 
        header.w3-container.w3-purple
        h2 Task Edit Form

        form.w3-container(method="POST" action="/tasks/editTask")
            fieldset
                legend Metadata
                label Description
                input.w3-input.w3-round(type="text" name="description" value=t.description)
                label Assigned To
                input.w3-input.w3-round(type="text" name="assigned_to" value=t.assigned_to)
                label Due Date
                input.w3-input.w3-round(type="text" name="due_date" value=t.due_date)
                label Status
                input.w3-input.w3-round(type="text" name="status" value=t.status)
                input.w3-input.w3-round(type="hidden" name="id" value=t.id readonly)

            button.w3-btn.w3-purple.w3-mb-2(type="submit") Edit

        footer.w3-container.w3-purple
        h5 Generated by Gon√ßalo Melo in #{d} - [#[a(href="/tasks") Return]]
